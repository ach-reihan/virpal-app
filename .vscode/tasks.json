{
  "version": "2.0.0",
  "tasks": [
    // Azure Functions Tasks
    {
      "type": "func",
      "label": "func: host start",
      "command": "host start",
      "problemMatcher": "$func-node-watch",
      "isBackground": true,
      "dependsOn": "npm watch (functions)",
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "type": "shell",
      "label": "npm build (functions)",
      "command": "npm",
      "args": ["run", "functions:build"],
      "dependsOn": "npm install (functions)",
      "problemMatcher": "$tsc",
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "type": "shell",
      "label": "npm watch (functions)",
      "command": "npm",
      "args": ["run", "watch"],
      "dependsOn": "npm install (functions)",
      "problemMatcher": "$tsc-watch",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "isBackground": true,
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true
      }
    },
    {
      "type": "shell",
      "label": "npm install (functions)",
      "command": "npm",
      "args": ["install"],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "type": "shell",
      "label": "npm prune (functions)",
      "command": "npm",
      "args": ["prune", "--production"],
      "dependsOn": "npm build (functions)",
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": false
      }
    },

    // Frontend Development Tasks
    {
      "type": "shell",
      "label": "Frontend: Dev Server",
      "command": "npm",
      "args": ["run", "dev"],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "isBackground": true,
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "new"
      },
      "runOptions": {
        "runOn": "folderOpen"
      }
    },
    {
      "type": "shell",
      "label": "Frontend: Build",
      "command": "npm",
      "args": ["run", "build:frontend"],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "problemMatcher": "$tsc",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "type": "shell",
      "label": "Frontend: Preview",
      "command": "npm",
      "args": ["run", "preview"],
      "dependsOn": "Frontend: Build",
      "group": {
        "kind": "test",
        "isDefault": false
      },
      "isBackground": true,
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "new"
      }
    },

    // Full Stack Development
    {
      "type": "shell",
      "label": "Full Stack: Start Development",
      "dependsOrder": "parallel",
      "dependsOn": ["Frontend: Dev Server", "func: host start"],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "new"
      }
    },

    // Build & Deployment Tasks
    {
      "type": "shell",
      "label": "Build: Full Application",
      "command": "npm",
      "args": ["run", "build"],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "problemMatcher": "$tsc",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "type": "shell",
      "label": "Deploy: Validate",
      "command": "npm",
      "args": ["run", "deploy:validate"],
      "group": {
        "kind": "test",
        "isDefault": false
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "dedicated"
      }
    },
    {
      "type": "shell",
      "label": "Deploy: Staging",
      "command": "npm",
      "args": ["run", "deploy:staging"],
      "group": {
        "kind": "test",
        "isDefault": false
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "dedicated"
      }
    },

    // Code Quality Tasks
    {
      "type": "shell",
      "label": "Lint: Check All",
      "command": "npm",
      "args": ["run", "lint"],
      "group": {
        "kind": "test",
        "isDefault": false
      },
      "problemMatcher": "$eslint-stylish",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "type": "shell",
      "label": "Clean: All Dist Folders",
      "command": "npm",
      "args": ["run", "clean:dist"],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },

    // Development Mode Tasks
    {
      "type": "shell",
      "label": "Mode: Switch to Local",
      "command": "npm",
      "args": ["run", "mode:local"],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "type": "shell",
      "label": "Mode: Switch to Emulator",
      "command": "npm",
      "args": ["run", "mode:emulator"],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "type": "shell",
      "label": "Mode: Check Status",
      "command": "npm",
      "args": ["run", "mode:status"],
      "group": {
        "kind": "test",
        "isDefault": false
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      }
    },

    // Workspace Management Tasks
    {
      "type": "shell",
      "label": "üéØ Quick Setup",
      "command": "pwsh",
      "args": [
        "-ExecutionPolicy",
        "Bypass",
        "-File",
        ".vscode\\quick-setup.ps1"
      ],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "dedicated"
      },
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "type": "shell",
      "label": "üîç Workspace Health Check",
      "command": "pwsh",
      "args": [
        "-ExecutionPolicy",
        "Bypass",
        "-File",
        ".vscode\\health-check.ps1",
        "-Detailed"
      ],
      "group": {
        "kind": "test",
        "isDefault": false
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "dedicated"
      },
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "type": "shell",
      "label": "üîß Fix Workspace Issues",
      "command": "pwsh",
      "args": [
        "-ExecutionPolicy",
        "Bypass",
        "-File",
        ".vscode\\health-check.ps1",
        "-Fix"
      ],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "dedicated"
      },
      "options": {
        "cwd": "${workspaceFolder}"
      }
    }
  ]
}
