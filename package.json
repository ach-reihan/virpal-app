{
  "name": "virpal-app",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "license": "PROPRIETARY",
  "author": "Achmad Reihan Alfaiz <reihan3000@gmail.com>",
  "description": "VirPal - AI Mental Health Assistant menggunakan Microsoft Azure. Submission untuk elevAIte with Dicoding Hackathon 2025 - SDG 3: Kesehatan Mental dan Dampak Judi Online.",
  "keywords": [
    "AI",
    "Mental Health",
    "Azure",
    "OpenAI",
    "Hackathon",
    "elevAIte",
    "Dicoding",
    "SDG",
    "Indonesia",
    "Mental Wellness",
    "Gambling Prevention",
    "Healthcare",
    "react",
    "typescript",
    "azure-functions"
  ],
  "hackathon": {
    "name": "elevAIte with Dicoding Online Hackathon 2025",
    "theme": "Mendukung SDG Indonesia dengan AI",
    "subtheme": "Kesehatan Mental dan Dampak Judi Online",
    "sdg": "SDG 3: Good Health and Well-being",
    "submission_date": "2025-06-13",
    "team": "VirPal Development Team",
    "email": "reihan3000@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "private"
  },
  "main": "dist/index.mjs",
  "scripts": {
    "dev": "vite --mode development",
    "build": "npm run build:frontend && npm run build:functions",
    "build:frontend": "vite build",
    "build:functions": "npm run clean:dist && tsc -p tsconfig.functions.json && node scripts/setup-functions.cjs",
    "clean:dist": "node -e \"const fs=require('fs'),path=require('path'); if(fs.existsSync('dist')) fs.rmSync('dist',{recursive:true}); fs.mkdirSync('dist');\"",
    "lint": "eslint .",
    "preview": "vite preview",
    "lighthouse": "npm run build:frontend && npx lhci autorun",
    "deploy:validate": "pwsh scripts/deploy-virpal.ps1 -Environment local -DeploymentType validate-only",
    "deploy:staging": "pwsh scripts/deploy-virpal.ps1 -Environment staging -DeploymentType full-deploy",
    "deploy:production": "pwsh scripts/deploy-virpal.ps1 -Environment production -DeploymentType full-deploy -ProductionDomain https://virpal.azurewebsites.net",
    "deploy:build-only": "pwsh scripts/deploy-virpal.ps1 -Environment staging -DeploymentType build-only",
    "functions:build": "npm run clean:dist && tsc -p tsconfig.functions.json && node scripts/setup-functions.cjs",
    "functions:watch": "tsc -p tsconfig.functions.json --watch",
    "functions:start": "node scripts/setup-functions.cjs && func host start --verbose",
    "watch": "tsc -p tsconfig.functions.json --watch",
    "dev:local": "node dev-mode.js local && npm run dev",
    "dev:emulator": "node dev-mode.js emulator && npm run dev",
    "dev:status": "node dev-mode.js status",
    "mode:local": "node dev-mode.js local",
    "mode:emulator": "node dev-mode.js emulator",
    "mode:status": "node dev-mode.js status"
  },
  "dependencies": {
    "@azure/cosmos": "^4.4.1",
    "@azure/functions": "^4.7.2",
    "@azure/identity": "^4.10.0",
    "@azure/keyvault-secrets": "^4.9.0",
    "@azure/msal-browser": "^4.13.0",
    "@azure/msal-react": "^3.0.12",
    "@tailwindcss/postcss": "^4.1.8",
    "@types/jsonwebtoken": "^9.0.9",
    "jsonwebtoken": "^9.0.2",
    "jwks-client": "^2.0.5",
    "jwks-rsa": "^3.2.0",
    "jwt-decode": "^4.0.0",
    "microsoft-cognitiveservices-speech-sdk": "^1.44.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-markdown": "^10.1.0",
    "rehype-highlight": "^7.0.2",
    "remark-gfm": "^4.0.1"
  },
  "engines": {
    "node": "~20"
  },
  "devDependencies": {
    "@eslint/js": "^9.13.0",
    "@tailwindcss/vite": "^4.1.8",
    "@types/node": "^22.15.27",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.3",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.13.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.14",
    "eslint-plugin-security": "^3.0.1",
    "globals": "^15.11.0",
    "postcss": "^8.5.4",
    "rimraf": "^6.0.1",
    "tailwindcss": "^4.1.8",
    "terser": "^5.41.0",
    "typescript": "~5.6.2",
    "typescript-eslint": "^8.10.0",
    "vite": "^6.0.1"
  }
}
