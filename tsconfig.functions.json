{  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "lib": ["ES2020"],
    "types": ["node"],
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": false,
    "sourceMap": true,
    "noEmitOnError": true,
    "verbatimModuleSyntax": true
  },  "include": [
    "src/index.ts",
    "src/functions/**/*",
    "src/services/azureKeyVaultService.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/components",
    "src/assets",
    "src/styles",
    "src/services/azureOpenAIService.ts",
    "src/hooks",
    "src/types",
    "src/utils",
    "src/App.tsx",
    "src/main.tsx",
    "src/vite-env.d.ts"
  ]
}
